{
  "name": "gobot",
  "version": "0.1.1",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "turbo": {
    "baseBranch": "origin/main",
    "pipeline": {
      "lint": {
        "outputs": []
      },
      "clean": {
        "cache": false
      },
      "test": {
        "dependsOn": [
          "^build"
        ],
        "outputs": []
      },
      "dev": {
        "dependsOn": [
          "build"
        ],
        "cache": false
      },
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**",
          ".next/**"
        ],
        "cache": false
      },
      "@gobot/frontend#build": {
        "dependsOn": [
          "@gobot/backend#healthcheck"
        ]
      },
      "start": {
        "dependsOn": [
          "build"
        ],
        "outputs": []
      },
      "healthcheck": {
        "dependsOn": [
          "start"
        ],
        "outputs": []
      }
    }
  },
  "scripts": {
    "release": "lerna version --conventional-commits -y",
    "diff": "lerna diff",
    "backend": "yarn workspace @gobot/backend",
    "frontend": "yarn workspace @gobot/frontend",
    "migration:gen": "docker-compose --env-file .env.production -f docker-compose.yml -f docker-compose.gen-migration.yml up backend && yarn stop",
    "migration:run": "docker-compose --env-file .env.production -f docker-compose.yml -f docker-compose.run-migration.yml up backend && yarn stop",
    "backup:load": "gzip -dkf ./tmp/backup.sql.gz && docker-compose --env-file .env.production -f docker-compose.yml -f docker-compose.prod.yml up -d postgres && echo Database is starting up... && sleep 10 &&  cat ./tmp/backup.sql | docker exec -i gobot-postgres_1 psql -U postgres -d Gobot && yarn stop",
    "logs:dev": "docker-compose -p gobot_dev logs -f",
    "logs:prod": "docker-compose -p gobot_prod logs -f",
    "build:dev": "docker-compose -p gobot_dev --env-file .env.development -f docker-compose.yml -f docker-compose.dev.yml build",
    "build:prod": "docker-compose -p gobot_prod --env-file .env.production -f docker-compose.yml -f docker-compose.prod.yml build",
    "dev": "docker-compose -p gobot_dev --env-file .env.development -f docker-compose.yml -f docker-compose.dev.yml up --build",
    "start": "docker-compose -p gobot_prod --env-file .env.production -f docker-compose.yml -f docker-compose.prod.yml up --build",
    "stop": "docker-compose down",
    "stop:dev": "docker-compose -p gobot_dev --env-file .env.development down",
    "stop:prod": "docker-compose -p gobot_prod --env-file .env.production down",
    "format:write": "prettier --write {app,packages}/**/*.{ts,js,json,yml,yaml,md,css,scss,html,ejs,jsx,tsx}",
    "format:check": "prettier --check {app,packages}/**/*.{ts,js,json,yml,yaml,md,css,scss,html,ejs,jsx,tsx}",
    "graph": "turbo run build --scope=\"@gobot/api\" --scope=\"@gobot/database\" --scope=\"@gobot/discord\" --scope=\"@gobot/environement\" --scope=\"@gobot/logger\" --no-cache --graph"
  },
  "devDependencies": {
    "lerna": "^4.0.0",
    "prettier": "2.5.1",
    "turbo": "^1.0.28"
  }
}
